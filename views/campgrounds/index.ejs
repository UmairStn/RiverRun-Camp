<% layout('layouts/boilerplate') %>

<div class="text-center mb-16">
    <h1 class="text-5xl font-black text-gray-900 mb-4 tracking-tight">Explore Nature</h1>
    <p class="text-lg text-gray-500 mb-8">Find your next getaway from our community's favorites.</p>
    <a href="/campgrounds/new" class="inline-flex items-center px-8 py-3 bg-gray-900 text-white font-bold rounded-full hover:bg-gray-800 transition transform hover:-translate-y-1 shadow-lg">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
        Add Campground
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% for(let campground of campgrounds) { %>
        <div class="group bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-300 border border-gray-100">
            <!-- Image Container -->
            <div class="relative h-72 overflow-hidden">
                <% if(campground.images.length) { %>
                    <img class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700" src="<%= campground.images[0].homePage %>" alt="<%= campground.title %>">
                <% } else { %>
                    <img class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700" src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/RiverRunCamp/lz8jjv2gyqn16439dg8i.png" alt="">
                <% } %>
                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-bold text-gray-900 shadow-sm">
                    $<%= campground.price %>
                </div>
            </div>
            
            <!-- Content -->
            <div class="p-6">
                <div class="flex items-center text-gray-400 text-xs font-semibold uppercase tracking-wider mb-2">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    <%= campground.location %>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-orange-600 transition-colors">
                    <a href="/campgrounds/<%= campground._id %>">
                        <span class="absolute inset-0"></span>
                        <%= campground.title %>
                    </a>
                </h3>
                <p class="text-gray-500 text-sm line-clamp-2"><%= campground.description %></p>
            </div>
        </div>
    <% } %>
</div>

<%- "<script>" %>
const maptilerApiKey = "<%- process.env.MAPTILER_API_KEY %>";
const campgrounds = {
  type: "FeatureCollection",
  features: <%- JSON.stringify(
    campgrounds.map(campground => ({
      type: "Feature",
      geometry: campground.geometry,
      properties: { popUpMarkup: campground?.properties?.popUpMarkup }
    }))
  ) %>
};
<%- "</script>" %>